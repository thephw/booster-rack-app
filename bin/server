#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

# trap ctrl-c and call cleanup
trap cleanup SIGINT

function cleanup() {
  echo -e "\nCleaning up..."
  pkill -F ./tmp/pids/rack-server.pid
}

mkdir -p ./log
touch ./log/development.log
mkdir -p ./tmp/pids/
bundle exec rackup -p 9292 config.ru > ./log/development.log 2>&1 &
echo $! > ./tmp/pids/rack-server.pid
tail -f ./log/development.log
